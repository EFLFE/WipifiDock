<Page x:Class="WipifiDock.Pages.ProjectPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:local="clr-namespace:WipifiDock.Pages"
      xmlns:q="clr-namespace:WipifiDock.Controls.TreeViewData"
      mc:Ignorable="d"
      Loaded="Page_Loaded"
      WindowHeight="320" WindowWidth="520" d:DesignWidth="520" d:DesignHeight="320"
      Title="ProjectWindow">

    <Grid x:Name="grid" Background="White">
        <!--#region ToolBar-->
        <ToolBar x:Name="gridPanel" Height="32" VerticalAlignment="Top" Margin="1,0,-1,0">

            <Button x:Name="editButton" Width="32" Height="32" ToolTip="Режим редактирования">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/edit.png" />
                </StackPanel>
            </Button>
            <Button x:Name="toHtmlButton" Width="32" Height="32" ToolTip="Режим HTML">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/tohtml.png" />
                </StackPanel>
            </Button>

            <Grid Width="16"></Grid>

            <Button x:Name="addDock" Width="20" Height="32" ToolTip="Добавить документ">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/addDock.png" />
                </StackPanel>
            </Button>
            <Button x:Name="addFolder" Width="20" Height="32" ToolTip="Добавить каталог">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/addFolder.png" />
                </StackPanel>
            </Button>

            <Grid Width="8"></Grid>

            <Button x:Name="deleteDock"  Width="20" Height="32" ToolTip="Удалить выбранный файл">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/delete.png" />
                </StackPanel>
            </Button>
            <Button x:Name="deleteFolder" Width="20" Height="32" ToolTip="Удалить выбранный каталог">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/removeFolder.png" />
                </StackPanel>
            </Button>

            <Grid Width="16"></Grid>

            <Button x:Name="collapse" Width="32" Height="32" ToolTip="Свернуть все каталоги">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/collapse.png" />
                </StackPanel>
            </Button>
            <Button x:Name="expand" Width="32" Height="32" ToolTip="Развернуть все каталоги">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/expand.png" />
                </StackPanel>
            </Button>

            <Grid Width="16"></Grid>

            <Button x:Name="configProject" Width="32" Height="32" ToolTip="Настройкки проекта">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/config.png" />
                </StackPanel>
            </Button>
            <Button x:Name="openProjectFolder" Width="20" Height="32" ToolTip="Открыть каталог проекта">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/openProjectFolder.png" />
                </StackPanel>
            </Button>
            <Button x:Name="projectToWebButton" Width="32" Height="32" ToolTip="Конвертировать проект в Web формат" Margin="0,-2,0,-3">
                <StackPanel>
                    <Image Source="/WipifiDock;component/Resources/Tools/projectToWeb.png" />
                </StackPanel>
            </Button>

        </ToolBar>
        <!--#endregion-->

        <!--#region Browse Buttons-->
        <TextBlock x:Name="urlTextBlock" IsEnabled="true" Height="23" Margin="69,32,0,0"
                 TextWrapping="NoWrap" Text="blank:null" VerticalAlignment="Top" FontFamily="Consolas" FontSize="14"/>
        <!--#endregion-->

        <Grid Margin="1,55,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="160*"/>
                <ColumnDefinition Width="431*"/>
            </Grid.ColumnDefinitions>

            <GridSplitter Grid.Row="0" Width="4"
                      VerticalAlignment="Stretch" HorizontalAlignment="Right" ResizeDirection="Columns" Background="#FFC3C3C3"/>

            <TabControl x:Name="tabControl" SelectionChanged="tabControl_SelectionChanged"  Grid.Column="1">
                <TabItem x:Name="addTabItem" Header="+" FontWeight="Bold" FontFamily="Consolas" FontSize="14"/>
            </TabControl>

            <TreeView x:Name="treeView" Margin="0,0,4,0">
                <TreeView.Resources>
                    <!-- Folders -->
                    <Style TargetType="{x:Type q:TreeViewDataFolder}">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">

                                        <!-- Как этот Binding работает?! -->
                                        <Image Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type q:TreeViewDataFolder}}, Path=GetImage}" Width="16" Height="16" />

                                        <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type q:TreeViewDataFolder}}, Path=FolderName}" />

                                        <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type q:TreeViewDataFolder}}, Path=GetItemCountString}" Foreground="Gray"/>

                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>
                    <!-- Files -->
                    <Style TargetType="{x:Type q:TreeViewDataFile}">
                        <Setter Property="HeaderTemplate">
                            <Setter.Value>
                                <DataTemplate>
                                    <StackPanel Orientation="Horizontal">

                                        <Image Source="{Binding RelativeSource={RelativeSource Mode=FindAncestor,
                                            AncestorType={x:Type q:TreeViewDataFile}}, Path=GetImage}" Width="16" Height="16" />

                                        <TextBlock Text="{Binding RelativeSource={RelativeSource Mode=FindAncestor, 
                                            AncestorType={x:Type q:TreeViewDataFile}}, Path=FileName}" />

                                    </StackPanel>
                                </DataTemplate>
                            </Setter.Value>
                        </Setter>
                    </Style>

                </TreeView.Resources>
            </TreeView>

        </Grid>
    </Grid>
</Page>
