<UserControl x:Class="WipifiDock.Controls.WebTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:WipifiDock"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="300">
    <Grid x:Name="grid" IsEnabled="false">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <GridSplitter Grid.Row="0" Width="4" VerticalAlignment="Stretch"
                      HorizontalAlignment="Right" ResizeDirection="Columns" Background="#FFC3C3C3"/>

        <TextBox x:Name="textBox" Margin="0,0,4,0" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" AcceptsReturn="True"/>
        <WebBrowser x:Name="webBrowser" Grid.Column="1"/>
    </Grid>
</UserControl>
